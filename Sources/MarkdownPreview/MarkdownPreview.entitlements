<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Quick Look extensions MUST be sandboxed or pkd will reject them -->
    <key>com.apple.security.app-sandbox</key>
    <true/>

    <!-- Read-only access to the file the user selected in Finder -->
    <key>com.apple.security.files.user-selected.read-only</key>
    <true/>
    
    <!-- Allow reading files in the same directory as the previewed file -->
    <key>com.apple.security.files.bookmarks.document-scope</key>
    <true/>
    
    <!-- Temporary exception: allow reading files in user's home directory (for images in markdown) -->
    <key>com.apple.security.temporary-exception.files.absolute-path.read-only</key>
    <array>
        <string>$HOME/</string>
    </array>

    <!-- Allow debugging in development builds -->
    <key>com.apple.security.get-task-allow</key>
    <true/>

    <!-- Allow network access for WebView -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Allow JIT (Recommended for WebView performance/stability) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    
    <!-- Allow printing (WebView often tries to access print services) -->
    <key>com.apple.security.print</key>
    <true/>

    <!-- Allow access to downloads (common read location) -->
    <key>com.apple.security.files.downloads.read-only</key>
    <true/>

    <!-- App Groups for sharing settings with Main App -->
    <key>com.apple.security.application-groups</key>
    <array>
        <string>group.com.xykong.Markdown</string>
    </array>
</dict>
</plist>

